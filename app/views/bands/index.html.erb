<p id="notice"><%= notice %></p>

<h1>Listing Bands</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Musicians</th>
      <th>Website</th>
      <th>Currently together</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bands.each do |band| %>
      <tr>
        <td><%= band.name %></td>
        <td><%= band.musicians %></td>
        <td><%= band.website %></td>
        <td><%= band.currently_together %></td>
        <% if user_signed_in? %>
          <td><%= link_to 'Show', band %></td>
          <td><%= link_to 'Edit', edit_band_path(band) %></td>
          <td><%= link_to 'Destroy', band, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% else %>
          <td><%= link_to 'Show', band %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? %>
  <%= link_to 'New Band', new_band_path %>
<% else %>
<% end %>
